<div class="btn-toolbar" >
  <div class="btn-group">
    <h2 id='dashboard-name' style="display:inline">{{dashboard.name}}</h2>
    <form id='dashboard-editable' class="form-inline" data-inline-edit="true" style="display: none">
      <input value="{{dashboard.name}}" type="text" class="input-xlarge focused" autocomplete="off">
    </form>
  </div>

  <div class="btn-group pull-right">
    <button class="btn btn-warning dashboard-delete" data-dashboard-id="{{id}}">
      <i class="icon-trash icon-white"></i>
    </button>
  </div>

  <div class="btn-group pull-right">

    <div class="btn-group">
      <!-- <a class="btn btn-success add-graph" href="#">Graph</a> -->
      <a class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#">
        Add Widget...
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu add-actions">
        <li><a href="#" class="add-graph" data-widget-kind="graph">Graph</a></li>
        <li><a href="#" class="add-counter" data-widget-kind="counter">Counter</a></li>
        <li><a href="#" class="add-ci" data-widget-kind="ci">CI</a></li>
        <li><a href="#" class="add-number" data-widget-kind="number">Number</a></li>
        <li><a href="#" class="add-boolean" data-widget-kind="boolean">Boolean</a></li>
      </ul>
    </div>

  </div>
</div>

<div id="widget-container"></div>
<div id="widget-dialog"></div>